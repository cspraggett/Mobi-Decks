            // ));
            // if (data.id > 0) $('#messages').append($('<li>').text(
            //   `${data.char}: ` + data.hand, data.wonBids, data.score, data.socketID, data.currentBid
            // ));

          });

          socket.on('gameInfo', function(msg){
            const data = JSON.parse(msg);
            console.log(data);
          });

        });
